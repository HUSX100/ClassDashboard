<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>Resources\EditB.ico</ApplicationIcon>
    <SignAssembly>False</SignAssembly>
    <ApplicationManifest>DashboardManagerWPF.exe.manifest</ApplicationManifest>
    <PlatformTarget>x64</PlatformTarget>
    <UseWindowsForms>False</UseWindowsForms>
    <StartupObject>DashboardManagerWPF.App</StartupObject>
    <AssemblyVersion>1.2.1.0</AssemblyVersion>
    <FileVersion>1.2.1.0</FileVersion>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\EditK.ico" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Resources\EditB.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Hardcodet.NotifyIcon.Wpf" Version="1.1.0" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\EditK.ico" />
  </ItemGroup>

</Project>
